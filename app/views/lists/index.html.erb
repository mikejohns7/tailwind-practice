<div class="">
    <h1 class="text-3xl font-semibold text-gray-900 mb-6" data-controller="hello" data-target="hello.output">Lists</h1>

    <% @lists.each do |list| %>
    <%= link_to(list, class: "block max-w-sm bg-white mb-4 rounded-lg overflow-hidden shadow-md cursor-pointer hover:shadow-lg") do %>
      <div class="">
        <div class="px-6 py-4">
          <div class="font-bold text-xl mb-2"><%= list.name %></div>
          <p class="font-medium uppercase text-tighter text-indigo-700 text-xs">
            <%= list.user.email %>
          </p>
        </div>
      </div>
    <% end %>
    <% end %>

    <%= link_to 'New List', new_list_path, class: "bg-indigo-700 hover:bg-indigo-900 text-white font-bold text-sm py-2 px-4 mt-4 rounded inline-block" %>
</div>
